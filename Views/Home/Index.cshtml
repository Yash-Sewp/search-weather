@model IEnumerable<Search_Weather.Models.User>

@{
  ViewBag.Title = "Home";
}

<div class="row justify-content-md-start">
  <div class="col-md-12 home-page d-flex align-items-center">

    <div class="home-page__container">
      <h2>Welcome to Search Weather</h2>

      <p>Please <a href="@Url.Action("Login","Account")">Log in</a>  or <a href="@Url.Action("Register","Account")">Register</a> to get weather</p>

      @if (Session["Email"] != null)
      {
        <p>Email: @Session["Email"].ToString()</p>
        <a href="@Url.Action("Logout","Account")" class="btn btn-primary">Logout</a>
      }
    </div>

  </div>
</div>