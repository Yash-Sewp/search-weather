@model Search_Weather.Models.User

@{
    ViewBag.Title = "Login";
}

<div class="row justify-content-md-center">
  <div class="col-12 mt-5">
    <h2>Login</h2>
    <hr />
  </div>
  <div class="col-12 col-md-12 results-page">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
      @Html.AntiForgeryToken()
      <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Enter Email" })

      </div>
      <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter Password" })
        @if (ViewBag.error != null)
        {
          <span class="badge badge-danger">@ViewBag.error</span>
        }
      </div>
      <div class="form-group">
        <input type="submit" name="submit" class="btn btn-primary" value="Login" />
      </div>
    }
  </div>
</div>

