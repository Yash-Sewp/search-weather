@model  Search_Weather.Models.Weather

@{
  ViewBag.Title = "Index";
}


<div class="row justify-content-md-start">
  <div class="col-12 col-md-12 mt-5">
    <h2>Get Weather</h2>
    <p>Enter a city in Gauteng, And See the current Temperature and Zip code</p>
    <hr />
  </div>
  <div class="col-12 col-md-12">
    <div class="get-weather-page">
      @using (Html.BeginForm("GetWeather", "Weather", FormMethod.Post))
      {
        //@Html.ValidationSummary()
        @Html.AntiForgeryToken()

        <div class="form-group">
          <label class="mb-4">City Name</label>
          @Html.TextBoxFor(m => m.CityName, "", new { @class = "form-control", @placeholder = "Enter city name. eg. Brakpan" })
          @Html.ValidationMessageFor(m => m.CityName, "", new { @class = "badge badge-danger" })
          @if (ViewBag.error != null)
          {
            <span class="badge badge-danger">@ViewBag.error</span>
          }

        </div>
        <div class="form-group">
          <input type="submit" name="submit" class="btn btn-danger" value="Get Weather" />
        </div>
      }
    </div>

  </div>
</div>

